{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gaeia/container": ["libs/container/src/index.ts"],
      "@gaeia/container/feature-container": [
        "libs/container/feature-container/src/index.ts"
      ],
      "@gaeia/cronus/feature-cronus": [
        "libs/cronus/feature-cronus/src/index.ts"
      ],
      "@gaeia/page-builder/feature-page-builder": [
        "libs/page-builder/feature-page-builder/src/index.ts"
      ],
      "@gaeia/shared/shared-ui": ["libs/shared/shared-ui/src/index.ts"],
      "@gaeia/timelines/feature-timelines": [
        "libs/timelines/feature-timelines/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
